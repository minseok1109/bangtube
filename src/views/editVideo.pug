extends base

block content
    h4 Update Video
    form(method="POST")
        input(name="title", placeholder="Video Title", required, value=video.title maxlength=80)
        input(name="description", placeholder="Description", required, value=video.description, minlength=20)
        input(name="hastags", placeholder="hastages", required, value=video.hastags.join())
        input(value="Save", type="submit")
